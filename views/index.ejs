        .card::after {
            content: "";
            z-index: -1;
            position: absolute;
            inset: 0;
            background: linear-gradient(-45deg,  #70ffbfca 0%, #54B4D3 100% );
            transform: translate3d(0, 0, 0) scale(0.95);
