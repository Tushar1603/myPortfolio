        .card::before {
            content: '';
            position: absolute;
            inset: 0;
            left: -5px;
            margin: auto;
            width: 215px;
            height: 315px;
            border-radius: 10px;
            background: linear-gradient(-75deg,  #70ffbfca 0%, #54B4D3 100% );
